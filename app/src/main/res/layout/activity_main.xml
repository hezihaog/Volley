<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        app:subtitleTextColor="@android:color/white"
        app:titleTextColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/get_request_http_url_connection_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URLConnection GET 请求" />

        <Button
            android:id="@+id/get_request_http_client_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="HttpClient GET 请求" />

        <Button
            android:id="@+id/get_request_okhttp_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="OkHttp GET 请求" />

        <Button
            android:id="@+id/get_request_async_http_client_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="AsyncHttpClient GET 请求" />

        <Button
            android:id="@+id/get_request_go_http_client_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="GoHttpClient GET 请求" />

        <Button
            android:id="@+id/start_all_web_server_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="启动所有Web服务" />

        <Button
            android:id="@+id/close_all_web_server_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="关闭所有Web服务" />
    </LinearLayout>
</LinearLayout>